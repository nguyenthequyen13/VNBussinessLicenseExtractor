{
  "manifest_version": 3,
  "name": "Trích Xuất Đăng Ký Kinh Doanh (Gemini)",
  "version": "1.1",
  "description": "Extension trích xuất thông tin từ ảnh/PDF ĐKKD Việt Nam.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Trích Xuất ĐKKD"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*.amis.vn/*",
    "*://*.misa.vn/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.amis.vn/*", "*://*.misa.vn/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}